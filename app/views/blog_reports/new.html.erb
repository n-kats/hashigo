<h1>New blog_report</h1>

<%= render 'form' %>

<%= link_to 'Back', blog_reports_path %>
<pre id="preview_body"></pre>
<script>
var conv = new Showdown.converter();

$("#blog_report_body").keyup(function(){
    var plain_text = $("#blog_report_body").val();
    var x = conv.makeHtml(plain_text);
    $("#preview_body").html(x);
    });

</script>
